@using Microsoft.AspNetCore.Mvc.Localization;
@model FileSharingProject.Models.LoginViewModel
@inject IViewLocalizer localizer

@{
    ViewData["Title"] = @localizer["Login."];
}




<!-- Start Contact Content -->
<div class="mu-contact-content">
    <div class="row">
        <div><h1>@localizer["Login."]</h1></div>
       
        <div class="col-md-12">
            <hr />
            <div class="mu-contact-form-area">  
                <form method="post" asp-action="login" class="mu-contact-form">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <span class="fa fa-envelope mu-contact-icon"></span>
                        <input type="text" asp-for="Email" class="form-control" placeholder="@localizer["Email"]">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <span class="fa fa-folder-open-o mu-contact-icon"></span>
                        <input type="password" asp-for="Password" class="form-control" placeholder="@localizer["Password"]">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

               
                    <button type="submit" class="mu-send-msg-btn"><span>@localizer["Login."]</span></button>
                </form>
                <a asp-action="index">Home</a>
            </div>
        </div>

    </div>
</div>
<!-- End Contact Content -->

