@using Microsoft.AspNetCore.Localization;
@using Microsoft.AspNetCore.Mvc.Localization;
@inject IViewLocalizer localizer

@{
    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
    bool isArabic = requestCulture!.RequestCulture.Culture.Name.StartsWith("ar");
}
<!DOCTYPE html>
<html lang="@(isArabic?"ar":"en")">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FileSharingProject</title>



    <!-- Fonts -->
    <!-- Google Fonts Raleway -->
    <link href="https://fonts.googleapis.com/css?family=Raleway:300,400,400i,500,500i,600,700" rel="stylesheet">
    <!-- Google Fonts Open sans -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,400i,600,700,800" rel="stylesheet">


    <!-- Stylesheet -->
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/icon" href="~/assets/images/favicon.ico" />
    <!-- Font Awesome -->
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css" rel="stylesheet">
    <!-- Skills Circle CSS  -->
    <link rel="stylesheet" type="text/css" href="https://unpkg.com/circlebars@1.0.3/dist/circle.css">
    <!-- my css-->
    <link rel="stylesheet" href="~/css/final.min.css" asp-append-version="true" />
    @if (isArabic)
    {
        <link rel="stylesheet" href="~/css/final-rtl.min.css" asp-append-version="true" />
    }

</head>



<body dir="@(isArabic?"rtl":"ltr")">
    <!--START SCROLL TOP BUTTON -->
    <a class="scrollToTop" href="#">
        <i class="fa fa-angle-up"></i>
    </a>
    <!-- END SCROLL TOP BUTTON -->
    <!-- Start Header -->
    <header id="mu-hero">
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-light mu-navbar">
                <!-- Text based logo -->
                <a class="navbar-brand mu-logo" asp-area="" asp-controller="Home" asp-action="Index"><span>FileSharingProject</span></a>

                <!-- image based logo -->
                <!-- <a class="navbar-brand mu-logo" href="index.html"><img src="~/assets/images/logo.png" alt="logo"></a> -->
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="fa fa-bars"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">

                    <ul class="navbar-nav mr-auto mu-navbar-nav">

                        <li class="nav-item @(Context.Request.Path.Value?.ToLower()=="/"?"active":"")">
                            <a asp-area="" asp-controller="Home" asp-action="Index">@localizer["Home"]</a>
                        </li>
                        <li class="nav-item">
                            <a href="about-us.html">@localizer["AboutUs"]</a>
                        </li>
                        <li class="nav-item @(Context.Request.Path.Value?.ToLower() == "/home/privacy"?"active":"")">
                            <a asp-area="" asp-controller="Home" asp-action="Privacy">@localizer["Privacy"]</a>
                        </li>
                        <li class="nav-item @(Context.Request.Path.Value?.ToLower() == "/culturecurrent"?"active":"")">
                            <a asp-area="" asp-controller="CultureCurrent" asp-action="Index">@localizer["CultureCurrent"]</a>
                        </li>
                        <partial name="_Partials/_IsAuthenticated" />
                        <li class="nav-item @(Context.Request.Path.Value?.ToLower() =="/browser"?"active":"")">
                            <a asp-controller="Browser" asp-action="Index">@localizer["Browser"]</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav mu-navbar-nav w-auto d-flex">
                        <li class="nav-item dropdown">
                            <a class="dropdown-toggle" href="#" role="button" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Account</a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <partial name="_Partials/_LoginAndSignOut" />
                            </div>
                    </ul>
                        <partial name="_Partials/_SelectCulturePartial" />
                    @*  <li class="nav-item dropdown">
                    <a class="dropdown-toggle" href="#" role="button" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Info</a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">

                    @if (User.Identity.IsAuthenticated)
                    {
                    <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
                    <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="info">@User.Identity.Name</a>

                    }
                    else
                    {
                    <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                    <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
                    }
                    </div>
                    </li>*@


                </div>
            </nav>
        </div>
    </header>
    <!-- End Header -->

    <br />

    <div class="container">
        <main role="main" class="main-content">

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">@TempData["Success"]</div>
            }
            
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">@TempData["Error"]</div>
            }
            
            @RenderBody()
        </main>
    </div>

